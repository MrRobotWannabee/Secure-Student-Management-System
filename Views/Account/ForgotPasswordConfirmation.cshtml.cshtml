<!-- Views/Account/ForgotPasswordConfirmation.cshtml -->
@{
    ViewData["Title"] = "Recovery Email Sent";
    Layout = "_AuthLayout";
}

<div class="auth-card mx-auto">
    <div class="card shadow-lg">
        <div class="card-body p-5 text-center">
            <div class="mb-4">
                <i class="bi bi-envelope-check-fill text-success" style="font-size: 3rem;"></i>
            </div>
            <h2 class="h3 mb-3">Check Your Email</h2>
            <p class="text-muted">
                If your account exists, we've sent a password reset link to your email.
                <span class="d-block mt-2">Link expires in 15 minutes.</span>
            </p>
            <div class="mt-4">
                <a href="@Url.Action("Login")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>