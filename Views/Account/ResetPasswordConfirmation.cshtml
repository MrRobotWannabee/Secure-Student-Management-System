<!-- Views/Account/ResetPasswordConfirmation.cshtml -->
@{
    ViewData["Title"] = "Password Reset Confirmation";
    Layout = "_AuthLayout";
}

<div class="auth-card mx-auto">
    <div class="card shadow-lg">
        <div class="card-body p-5 text-center">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            </div>
            <h2 class="h3 mb-3">Password Reset Successful</h2>
            <p class="text-muted">
                Your password has been updated successfully.
                <span class="d-block mt-2">You can now login with your new credentials.</span>
            </p>
            <div class="mt-4">
                <a href="@Url.Action("Login")" class="btn btn-success">
                    <i class="bi bi-box-arrow-in-right"></i> Continue to Login
                </a>
            </div>
        </div>
    </div>
</div>