<!-- Views/Account/Register.cshtml -->
@model RegisterViewModel
@{
    ViewData["Title"] = "Create New Account";
    Layout = "_AuthLayout";
}

<div class="auth-card mx-auto">
    <div class="card shadow-lg">
        <div class="card-body p-5">
            <h2 class="h3 mb-4 fw-bold text-center">
                <i class="bi bi-person-plus-fill text-primary"></i> Create Account
            </h2>

            <form asp-action="Register" method="post" class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">First Name</label>
                        <input asp-for="Email" class="form-control"
                               required
                               data-val="true"
                               autocomplete="given-name">
                        <div class="invalid-feedback">Email is required</div>
                    </div>

                   
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control"
                           type="email"
                           required
                           data-val="true"
                           autocomplete="email">
                    <div class="invalid-feedback">Valid email is required</div>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Password" type="password"
                               class="form-control password-strength"
                               required
                               minlength="8"
                               pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,}$">
                        <button type="button" class="btn btn-outline-secondary toggle-password">
                            <i class="bi bi-eye-slash"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback">
                        Password must contain: 8+ chars, uppercase, lowercase, number, and special character
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="form-control"
                           required
                           data-val-equalto="Passwords do not match"
                           data-val-equalto-other="Password">
                    <div class="invalid-feedback">Passwords must match</div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="bi bi-person-check-fill"></i> Create Account
                </button>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Already have an account?
                        <a href="@Url.Action("Login")" class="text-decoration-none">Sign In</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>