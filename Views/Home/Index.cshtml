@{
    ViewData["Title"] = "Home";
}

<section class="hero bg-primary text-white text-center py-5" style="background-image: url('~/images/hero-bg.jpg'); background-size: cover; background-position: center;">
    <div class="container">
        <h1 class="display-4">Welcome to Secure Student Management System</h1>
        <p class="lead">Efficiently manage student records with enhanced security and cloud storage.</p>
        <a href="#features" class="btn btn-light btn-lg">Explore Features</a>
    </div>
</section>

<section id="features" class="container py-5">
    <h2 class="text-center mb-4">Our Key Features</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <i class="fas fa-lock fa-3x text-primary"></i>
                    <h5 class="card-title mt-3">Secure Authentication</h5>
                    <p class="card-text">Utilize OAuth 2.0 protocols to ensure secure access to student records and data.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <i class="fas fa-cloud fa-3x text-primary"></i>
                    <h5 class="card-title mt-3">Cloud Storage</h5>
                    <p class="card-text">Safe and secure file handling with Azure Cloud Storage, ensuring easy access and constant availability.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary"></i>
                    <h5 class="card-title mt-3">User Management</h5>
                    <p class="card-text">Effortlessly manage user roles and permissions for students, admins, and faculty members.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="testimonial" class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">What Our Users Say</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center shadow-lg">
                    <div class="card-body">
                        <p class="card-text">"This system has revolutionized how we manage student data. It's fast, secure, and extremely user-friendly."</p>
                        <footer class="blockquote-footer">John Doe, Admin</footer>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center shadow-lg">
                    <div class="card-body">
                        <p class="card-text">"As a student, I love the security and ease of access. All my records are safe and available when I need them."</p>
                        <footer class="blockquote-footer">Jane Smith, Student</footer>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center shadow-lg">
                    <div class="card-body">
                        <p class="card-text">"The integration with Azure Cloud is seamless, and our data has never been more secure."</p>
                        <footer class="blockquote-footer">Mark Lee, Faculty</footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="call-to-action" class="bg-primary text-white text-center py-5">
    <div class="container">
        <h2 class="display-4">Get Started Today</h2>
        <p class="lead">Experience the best in student record management with secure authentication and cloud-based storage.</p>
        <a href="#contact" class="btn btn-light btn-lg">Contact Us</a>
    </div>
</section>

<section id="contact" class="container py-5">
    <h2 class="text-center mb-4">Contact Us</h2>
    <p class="text-center">Have questions or need support? Reach out to us below.</p>
    <div class="text-center">
        <p>Email: <a href="mailto:support@ssms.com">support@ssms.com</a></p>
        <p>Phone: +1 234 567 890</p>
    </div>
</section>
